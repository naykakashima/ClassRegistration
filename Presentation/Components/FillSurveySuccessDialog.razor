@using MudBlazor

@inject IDialogService DialogService
@inject NavigationManager Nav
@inject ISnackbar Snackbar

<MudDialog Style="width: 800px; max-width: 90vw;">
    <DialogContent>
        <MudStack Spacing="2">
            <MudStack Row="true" Spacing="1">
                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Large" />
                <MudText Typo="Typo.h5" Color="Color.Success">Survey Submitted</MudText>
            </MudStack>

            <MudText Typo="Typo.body2" Color="Color.Secondary">
                Your responses have been recorded successfully.
            </MudText>

            <MudDivider />
        </MudStack>
    </DialogContent>

    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Submit">Close</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public string FormattedJson { get; set; } = string.Empty;

    private void Cancel() => MudDialog.Cancel();
    private void Submit()
    {
        Snackbar.Add("Survey submitted!", MudBlazor.Severity.Success);
        MudDialog.Close(DialogResult.Ok(true));
    }
}